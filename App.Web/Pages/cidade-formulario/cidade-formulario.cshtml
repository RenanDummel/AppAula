@page "/cidade/formulario/{id?}"
<h4>Formulário de Cidades</h4>
<div class="row">
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Cep</label>
            <input type="text" name="cep" id="cep" class="form-control" />
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group mb-12">
            <label>UF</label>
            <input type="text" name="uf" id="uf" class="form-control" />
        </div>
    </div>
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Municipio</label>
            <input type="text" name="municipio" id="municipio" class="form-control" />
        </div>
    </div>
</div>
<br />
<div>
    <button class="btn btn-primary btn-sm" onclick="salvar();">Salvar</button>
    <button class="btn btn-danger btn-sm" onclick="window.location.href='/cidade'">Cancelar</button>
</div>

@section Scripts {
    <script src="~/js/pages/cidade/cidade-formulario.js"></script>
}